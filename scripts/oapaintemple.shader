textures/oapaintemple/beam_up
{
	qer_trans 0.5
	qer_editorimage textures/sfx/beam.jpg
	surfaceparm trans
	surfaceparm nomarks
	surfaceparm nonsolid
	surfaceparm nolightmap
	cull none
	deformVertexes move 0 0 20 sawtooth 0 1 1 4.0
	{
		map textures/sfx/beam.jpg
		tcMod Scroll .3 0
		blendFunc GL_ONE GL_ONE
	}
}

